<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= description %></h1>
    <p id="token-display"></p>

    <script src="https://www.google.com/recaptcha/api.js?render=6LcoOHIqAAAAAH9aumBdqPyOMWCyC1s5w_UZUWmV"></script>

    <script>
      grecaptcha.ready(function () {
        grecaptcha.execute('6LcoOHIqAAAAAH9aumBdqPyOMWCyC1s5w_UZUWmV').then(function (token) {
          document.getElementById('token-display').textContent = token
        })
      })
    </script>
  </body>
</html>
